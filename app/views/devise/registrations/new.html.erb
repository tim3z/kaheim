<div class="page-header">
  <h1><%=t 'devise.basic.sign_up' %></h1>
</div>

<%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>

  <%= f.text_field :name, class: 'text_field' %>
  <%= f.email_field :email, :class => 'text_field' %>
  <%= f.password_field :password, :class => 'text_field' %>
  <%= f.password_field :password_confirmation, :class => 'text_field' %>
  <div class="control-group">
    <div class="controls">
      <%= recaptcha_tags %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit t('devise.basic.sign_up'), :class => 'btn btn-primary' %>
    <%= render "devise/shared/links" %>
  </div>

<% end %>
